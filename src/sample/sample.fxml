<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.input.*?>
<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

   <top>
      <VBox>
         <children>
            <MenuBar>
               <menus>
                  <Menu text="File">
                     <items>
                        <MenuItem fx:id="newItem" mnemonicParsing="false" onAction="#newItemInvoked" text="New" />
                        <MenuItem fx:id="openItem" mnemonicParsing="false" onAction="#openItemInvoked" text="Open" />
                        <MenuItem fx:id="saveItem" mnemonicParsing="false" onAction="#saveItemInvoked" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Save As" />
                     </items></Menu>
                  <Menu text="Edit" />
               </menus>
            </MenuBar>
   
            <ToolBar prefHeight="0.0" prefWidth="600.0">
      <items>
                  <TextField fx:id="brushSize" text="18" />
                  <ColorPicker fx:id="colorPicker" editable="true" prefHeight="25.0" prefWidth="49.0" />
                  <CheckBox fx:id="eraser" text="Eraser" />
      </items>
            </ToolBar>
            <ToolBar prefHeight="40.0" prefWidth="600.0">
               <items>
                  <Button fx:id="Eraser" mnemonicParsing="false" onAction="#eraserButtonInvoked" prefHeight="26.0" prefWidth="26.0">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/eraser.gif" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="fillButton" mnemonicParsing="false" onAction="#fillButtonInvoked" prefHeight="26.0" prefWidth="26.0">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/fill.gif" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="Pencil" mnemonicParsing="false" onAction="#pencilButtonInvoked" prefHeight="26.0" prefWidth="26.0">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/pencil.gif" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="Rectangle" mnemonicParsing="false" onAction="#rectButtonInvoked" prefHeight="26.0" prefWidth="26.0">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/rectangle.gif" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="Brush" layoutX="178.0" layoutY="12.0" mnemonicParsing="false" onAction="#brushButtonInvoked" prefHeight="26.0" prefWidth="26.0">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@Images/readme-icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </items>
            </ToolBar>
         </children>
      </VBox>
   </top>

   <center>
      <Canvas fx:id="canvas" height="639.0" width="600" />
   </center>

</BorderPane>
